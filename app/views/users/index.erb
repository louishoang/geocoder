<h2>Search</h2>
<form class="inline" action="/users" method="get">
  <div class="large-12 columns">
      <div class="row collapse prefix-radius">
        <div class="small-2 columns">
          <span class="prefix">Address</span>
        </div>
        <div class="small-7 columns">
          <input type="text" placeholder="address" name="address">
        </div>
        <div class="small-3 columns">
          <input class="tiny round button" type="submit" value="submit">
        </div>
      </div>
    </div>
</form>

<div class="large-12 columns push-2">
  <ul class="inline-list">
    <li> Distance: </li>
    <li><a href="#">10</a></li>
    <li><a href="#">20</a></li>
    <li><a href="#">30</a></li>
  </ul>
</div>

<div class="large-12 columns" style="margin-top: 50px">
  <ul>
    <% @users.each do |user| %>
      <li>
        <h5><%= user.name %></h5>
        <div>
          <ul class="inline-list">
            <li>
              <%= user.address %>
            </li>
            <li>
              <% if user[:distance] %>
                <% if user.distance.round(2) <= 1 %>
                  Less than 1 mile
                <% else %>
                  <%= user.distance.round(1) %> miles
                <% end %>
              <% end %>
            </li>
            <li>
              <a href="#">Show Direction</a>
            </li>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
</div>
